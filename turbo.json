{
  "$schema": "https://turbo.build/schema.json",
  "remoteCache": {
    "enabled": true
  },
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": [
        "NODE_ENV",
        "NEXTAUTH_SECRET",
        "AUTH_DISCORD_ID",
        "AUTH_DISCORD_SECRET",
        "AUTH_GOOGLE_ID",
        "AUTH_GOOGLE_SECRET",
        "AUTH_EMAIL_FROM",
        "DATABASE_URL",
        "JWT_SECRET",
        "SENDGRID_API_KEY",
        "STRIPE_SECRET_KEY",
        "CRON_SECRET",
        "STRIPE_WEBHOOK_SECRET",
        "STRIPE_CONNECT_WEBHOOK_SECRET",
        "NEXTAUTH_URL",
        "SMTP_HOST",
        "SMTP_PORT",
        "SMTP_USER",
        "SMTP_PASS",
        "EMAIL_FROM",
        "SENTRY_AUTH_TOKEN",
        "AUTH_EMAIL_SERVER",
        "X_CAL_SECRET_KEY",
        "NEXT_PUBLIC_BASE_URL",
        "NEXT_PUBLIC_X_CAL_ID",
        "NEXT_PUBLIC_CALCOM_API_URL",
        "SKIP_ENV_VALIDATION"
      ],
      "passThroughEnv": [
        "NODE_ENV",
        "NEXTAUTH_SECRET",
        "AUTH_DISCORD_ID",
        "AUTH_DISCORD_SECRET",
        "AUTH_GOOGLE_ID",
        "AUTH_GOOGLE_SECRET",
        "AUTH_EMAIL_FROM",
        "DATABASE_URL",
        "JWT_SECRET",
        "SENDGRID_API_KEY",
        "STRIPE_SECRET_KEY",
        "CRON_SECRET",
        "STRIPE_WEBHOOK_SECRET",
        "STRIPE_CONNECT_WEBHOOK_SECRET",
        "NEXTAUTH_URL",
        "SMTP_HOST",
        "SMTP_PORT",
        "SMTP_USER",
        "SMTP_PASS",
        "EMAIL_FROM",
        "SENTRY_AUTH_TOKEN",
        "AUTH_EMAIL_SERVER",
        "X_CAL_SECRET_KEY",
        "NEXT_PUBLIC_BASE_URL",
        "NEXT_PUBLIC_X_CAL_ID",
        "NEXT_PUBLIC_CALCOM_API_URL",
        "SKIP_ENV_VALIDATION"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "lint:fix": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "env": ["NODE_ENV"]
    },
    "test:run": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "env": ["NODE_ENV"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "outputs": ["**/*.tsbuildinfo"]
    },
    "clean": {
      "cache": false
    },
    "format:write": {
      "cache": false,
      "outputs": []
    },
    "format:check": {
      "outputs": []
    },
    "db:generate": {
      "cache": false,
      "inputs": ["drizzle.config.ts", "src/server/db/schema.ts"]
    },
    "db:migrate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "db:studio": {
      "cache": false,
      "persistent": true
    }
  }
}
